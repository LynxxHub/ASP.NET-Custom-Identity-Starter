@page
@using ASP.NET_Custom_Identity_Starter.Areas.Identity.Pages.Admin;
@model RolesModel

<h2>Role Management</h2>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-page="./RoleDetails" asp-route-roleId="@role.Id" class="btn btn-info">View Details</a>
                    <form method="post" asp-page-handler="Delete" asp-route-roleId="@role.Id" onsubmit="return confirm('Are you sure you want to delete this role?');" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./AddRole" class="btn btn-success">Add New Role</a>